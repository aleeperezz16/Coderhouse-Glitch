<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

  <title>Productos</title>
</head>

<body>
  <div class="container w-25 alert alert-success d-flex justify-content-between" role="alert">
    <h2 class="alert-heading">Bienvenido <%= user %></h2>
    <a href="./productos-test/logout"><button class="btn btn-warning">Desloguear</button></a>
  </div>
  <div class="container bg-secondary bg-opacity-25 p-5 w-25">
    <h1 class="text-primary mb-5">Vista de productos</h1>
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Foto</th>
        </tr>
      </thead>
      <tbody>
        <% productos.forEach(elem=> { %>
          <tr>
            <td>
              <%= elem.nombre %>
            </td>
            <td>$<%= elem.precio %>
            </td>
            <td>
              <img src=<%=elem.imagen %> width="48"/>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>
</body>

</html>